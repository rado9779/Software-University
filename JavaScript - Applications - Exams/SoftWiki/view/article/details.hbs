{{> header}}

<div class="container details">
    <div class="details-content">
        <h2>{{article.title}}</h2>
        <strong>{{article.category}}</strong>
        <p>{{article.conent}}</p>
        <div class="buttons">
            {{#if isOrganizer}}
            <a href="#/delete/{{article.id}}" class="btn delete">Delete</a>
            <a href="#/edit/{{article.id}}" class="btn edit">Edit</a>
            {{/if}}
            <a href="#/home" class="btn edit">Back</a>
        </div>
    </div>
</div>

{{> footer}}